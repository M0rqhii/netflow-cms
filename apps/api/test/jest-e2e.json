{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@repo/(.*)$": "<rootDir>/../../../packages/$1/src"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/setup-e2e.ts"
  ],
  "maxWorkers": 1,
  "globalSetup": "<rootDir>/global-setup.cjs"
}